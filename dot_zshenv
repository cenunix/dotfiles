export NPM_CONFIG_CACHE="$HOME/langs/npm/"
export NPM_CONFIG_TMP="$HOME/langs/npm/"
export GTK2_RC_FILES="$XDG_CONFIG_HOME"/gtk-2.0/.gtkrc-2.0
